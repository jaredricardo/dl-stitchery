{% doc %}
  @prompt
    generate me a simple image section where I can specify the width of the image and the background of the section, allow me to adjust the maximum height of the section on desktop and mobile. It should be either a set number of px, or 1/2, 1/3 the viewport height
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-section-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.section_background_color }};
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-image-section__container-{{ ai_gen_id }} {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 20px;
    {% if block.settings.desktop_height_type == 'viewport_half' %}
      max-height: 50vh;
    {% elsif block.settings.desktop_height_type == 'viewport_third' %}
      max-height: 33vh;
    {% elsif block.settings.desktop_height_type == 'pixels' %}
      max-height: {{ block.settings.desktop_max_height_px }}px;
    {% endif %}
  }

  .ai-image-section__image-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.image_width }}%;
    max-width: 100%;
    margin: 0 auto;
    height: 100%;
  }

  .ai-image-section__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
    object-fit: cover;
  }

  .ai-image-section__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: 300px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
    position: relative;
  }

  .ai-image-section__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-image-section__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-image-section__container-{{ ai_gen_id }} {
      {% if block.settings.mobile_height_type == 'viewport_half' %}
        max-height: 50vh;
      {% elsif block.settings.mobile_height_type == 'viewport_third' %}
        max-height: 33vh;
      {% elsif block.settings.mobile_height_type == 'pixels' %}
        max-height: {{ block.settings.mobile_max_height_px }}px;
      {% endif %}
    }

    .ai-image-section__image-wrapper-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-image-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-section__container-{{ ai_gen_id }}">
    <div class="ai-image-section__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 2000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-image-section__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-image-section__placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-image-section__empty-state-{{ ai_gen_id }}">
            Add an image to get started
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

